<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExplorerActivity"
    android:nestedScrollingEnabled="true"
    android:minHeight="20dp"
    android:background="@color/colorText"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_bg"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        app:cardCornerRadius="0dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorPrimary">
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/Back"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:icon="@drawable/back"
                android:textColor="@color/colorWhite"
                app:cornerRadius="5dp"
                app:iconTint="@color/colorWhite"
                app:strokeColor="@color/colorWhite"
                app:iconGravity="textStart"
                app:iconSize="25dp"
                android:layout_marginLeft="7dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Home"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:icon="@drawable/home"
                android:layout_marginLeft="7dp"
                android:textColor="@color/colorWhite"
                app:cornerRadius="5dp"
                app:iconTint="@color/colorWhite"
                app:strokeColor="@color/colorWhite"
                app:iconGravity="textStart"
                app:iconSize="25dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:clickable="false"
        android:focusable="true"
        android:stackFromBottom="false"
        android:smoothScrollbar="false"
        android:scrollingCache="false"
        android:longClickable="false"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textFilterEnabled="false"
        android:touchscreenBlocksFocus="false"
        tools:listitem="@android:layout/simple_list_item_1"
        android:layout_below="@+id/card_view_h"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_h"
        android:id="@+id/empty_folder_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/officer_barbrady"
            android:layout_centerHorizontal="true"
            android:id="@+id/officer_b"
            android:layout_marginTop="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/officer_b"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text_size_xl"
            android:text="Move Along, Nothing to see here.\n Just an Empty Folder"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/divider"/>


    </RelativeLayout>



    <!--loading spinner-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card_view_h"
        android:id="@+id/loading_layout"
        android:background="@color/colorText"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/spinner"
            android:layout_marginTop="150dp"
            android:id="@+id/loading_image" />

        <TextView
            android:id="@+id/ErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/loading_image"
            android:textSize="@dimen/text_size"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:text="Please Wait..." />

    </RelativeLayout>


</RelativeLayout>
