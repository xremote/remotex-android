<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="1dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/image_xl"
                android:layout_height="@dimen/image_xl"
                android:id="@+id/drive_image"
                android:src="@drawable/pc_material_icon"
                android:padding="5dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:textSize="@dimen/text_size_xl"
                android:textAlignment="textStart"
                android:minHeight="25dp"
                android:id="@+id/drive_name"
                android:padding="5dp"
                android:text="My Computer "
                android:singleLine="true"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
